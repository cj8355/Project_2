    <img src={{format_source product.parentFolder product.filename}} />

    <p>{{product.product_name}}</p>

    <p>${{product.price}}</p>

    <p>Quantity - {{product.stock}}</p>

    {{!-- <p>{{product.category_id}}</p> --}}

    <p>Size - {{product.size}}</p>

    {{!-- <p>{{product.parentFolder}}</p> --}}

    <p>{{product.gender}}</p>

    <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
    <input type="hidden" name="cmd" value="_s-xclick">
    <input type="hidden" name="hosted_button_id" value="G5D3MTZH5J5TS">
    <table>
    <tr><td><input type="hidden" name="on0" value=""Prices""></td></tr><tr><td><select name="os0">
